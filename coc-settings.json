{
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"],
	  "disable": {
		  "WorkspaceFolders": false
	  }
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {}
    },
    "puppet": {
      "command": "ruby",
      "args": ["/Users/taitken/src/github/lingua-pupuli/puppet-editor-services/puppet-languageserver","--stdio"],
      "cwd": "/Users/taitken/src/github/lingua-pupuli/puppet-editor-services",
      "filetypes": ["puppet"],
      "rootPatterns": [".git/", "metadata.json"]
    }
  }
}
